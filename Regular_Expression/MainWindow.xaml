<Window x:Class="Regular_Expression.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Regular_Expression"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label Content="Regex code:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_regex" HorizontalAlignment="Left" Height="23" Margin="89,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="418" LostFocus="txt_regex_LostFocus"/>
        <TextBox x:Name="txt_text" HorizontalAlignment="Left" Height="134" Margin="89,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="418" TextChanged="txt_regex_TextChanged"/>
        <Label Content="Your text:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <Label Content="Matchs text:" HorizontalAlignment="Left" Margin="10,177,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_match" HorizontalAlignment="Left" Height="128" Margin="89,177,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="418" TextChanged="txt_regex_TextChanged"/>

    </Grid>
</Window>
